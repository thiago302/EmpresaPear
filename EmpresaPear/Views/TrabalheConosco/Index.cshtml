
@{
    ViewData["Title"] = "Index";
}



    <div class="centro">
        <div class="centro2">
            <div>
                <h1 id="titulo">Fale sobre você!</h1>
                <p id="subtitulo">Complete suas informações:</p>
                <br>
            </div>
            <form>
                <div class="grupo">
                    <div class="campo">
                        <label for="nome"><strong>Nome</strong></label>
                        <input type="text" name="nome" id="nome" required>
                        <label for="sobrenome"><strong>Sobrenome</strong></label>
                        <input type="text" name="sobrenome" id="sobrenome" required>
                        <label for="email"><strong>Email</strong></label>
                        <input type="email" name="email" id="email" required>
                    </div>
                </div>

                <div class="campo">
                    <label><strong>Qual é a sua formação?</strong></label>
                    <label>
                        <input type="radio" name="devweb" value="em" checked>Ensino Médio
                    </label>
                    <label>
                        <input type="radio" name="devweb" value="eja">EJA
                    </label>
                    <label>
                        <input type="radio" name="devweb" value="superior">Ensino Superior
                    </label>
                </div>

                <div class="campo">
                    <label for="área"><strong>Qual é a sua atuação no momento?</strong></label>
                    <select id="área" required>
                        <option selected disabled value="">Selecione</option>
                        <option>Desempregado</option>
                        <option>Aprendiz</option>
                        <option>Júnior</option>
                        <option>Pleno</option>
                        <option>Sênior</option>
                    </select>
                </div>



                <div class="grupo">

                    <div id="check">
                        <label><strong>Selecione qual área lhe chama mais atenção:</strong></label><br><br>
                        <input type="checkbox" id="tecnologia1" name="tecnologia1" value="HTML">
                        <label for="tecnologia1"> Programação</label>
                        <input type="checkbox" id="tecnologia2" name="tecnologia2" value="CSS">
                        <label for="tecnologia2"> RH</label>
                        <input type="checkbox" id="tecnologia3" name="tecnologia3" value="JavaScript">
                        <label for="tecnologia3"> Desenvolvimento</label>
                        <input type="checkbox" id="tecnologia4" name="tecnologia4" value="PHP">
                        <label for="tecnologia4"> Operações</label>
                        <input type="checkbox" id="tecnologia5" name="tecnologia5" value="C#">
                        <label for="tecnologia5"> Atendimento ao Cliente</label>
                    </div>
                </div>

                <div class="campo">
                    <br>
                    <label for="experiencia"><strong>Conte um pouco mais de sua experiência e por que deseja fazer parte
                            da família
                            Pear: </strong></label>
                    <textarea rows="6" style="width: 26em" id="experiencia" name="experiencia"></textarea>
                </div>
                <button class="botao" type="submit" onsubmit="">Concluído</button>
        </form>
        </div>
        <div class="centro3">
            <img src="~/img/PEAR PNG.png" alt="">
        </div>
    </div>   


